{
  "app": "npx ts-node bin/app.ts",
  "context": {
    "environment": "dev",
    "awsRegion": "us-east-1",
    "appName": "folio-management",

    "eventBridge": {
      "eventBusName": "folio-event-bus",
      "deadLetterQueueArn": ""
    },

    "dynamodb": {
      "eventStore": {
        "tableName": "folio-events",
        "billingMode": "PAY_PER_REQUEST",
        "pointInTimeRecovery": true,
        "ttl": {
          "enabled": false,
          "attributeName": "expiration"
        }
      },
      "statusProjections": {
        "tableName": "folio-status-projections",
        "billingMode": "PAY_PER_REQUEST",
        "pointInTimeRecovery": true
      },
      "hotelConfig": {
        "tableName": "folio-hotel-config",
        "billingMode": "PAY_PER_REQUEST"
      },
      "callContext": {
        "tableName": "folio-call-context",
        "billingMode": "PAY_PER_REQUEST",
        "ttl": {
          "enabled": true,
          "attributeName": "expiration",
          "ttlSeconds": 86400
        }
      }
    },

    "lambda": {
      "architecture": "arm64",
      "runtime": "nodejs20.x",
      "timeout": 30,
      "memorySize": 512,
      "ephemeralStorageSize": 512,
      "logRetentionDays": 7,
      "reservedConcurrentExecutions": {
        "scheduler": 2,
        "batchingEngine": 5,
        "callInitiator": 50,
        "ivrNavigator": 50,
        "voiceAnalyzer": 50,
        "emailComposer": 10,
        "emailMonitor": 5,
        "dataExtractor": 20,
        "callbackManager": 10,
        "statusManager": 2,
        "eventWriter": 10
      }
    },

    "stepFunctions": {
      "callHandler": {
        "stateMachineName": "folio-call-handler",
        "timeout": 600,
        "logLevel": "ERROR"
      }
    },

    "sqs": {
      "schedulingQueue": {
        "queueName": "folio-scheduling-queue.fifo",
        "fifo": true,
        "contentBasedDeduplication": false,
        "visibilityTimeout": 60,
        "messageRetentionPeriod": 86400,
        "receiveMessageWaitTimeSeconds": 20,
        "batchSize": 10
      },
      "callbackQueue": {
        "queueName": "folio-callback-queue.fifo",
        "fifo": true,
        "contentBasedDeduplication": false,
        "visibilityTimeout": 120,
        "messageRetentionPeriod": 604800,
        "receiveMessageWaitTimeSeconds": 20,
        "batchSize": 5
      }
    },

    "s3": {
      "callRecordings": {
        "bucketPrefix": "folio-call-recordings",
        "blockPublicAccess": true,
        "versioningEnabled": false,
        "serverSideEncryption": "AES256",
        "lifecycleRules": [
          {
            "id": "to-ia-90-days",
            "transitions": [
              {
                "storageClass": "STANDARD_IA",
                "transitionAfterDays": 90
              },
              {
                "storageClass": "GLACIER_IR",
                "transitionAfterDays": 365
              }
            ],
            "expiration": 2555
          }
        ]
      },
      "emailAttachments": {
        "bucketPrefix": "folio-email-attachments",
        "blockPublicAccess": true,
        "versioningEnabled": false,
        "serverSideEncryption": "AES256",
        "lifecycleRules": [
          {
            "id": "to-ia-30-days",
            "transitions": [
              {
                "storageClass": "STANDARD_IA",
                "transitionAfterDays": 30
              }
            ],
            "expiration": 730
          }
        ]
      }
    },

    "monitoring": {
      "cloudWatch": {
        "dashboardName": "folio-system",
        "enableDetailedMonitoring": true
      },
      "xray": {
        "enabled": true,
        "samplingRate": 0.1,
        "logLevel": "info"
      }
    },

    "tags": {
      "Project": "FolioAI",
      "Environment": "dev",
      "ManagedBy": "CDK",
      "CostCenter": "Engineering"
    }
  }
}

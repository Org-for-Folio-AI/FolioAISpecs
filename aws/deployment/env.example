# AWS Configuration
export AWS_REGION=us-east-1
export AWS_ACCOUNT_ID=123456789012

# Application Configuration
export ENVIRONMENT=dev
export APP_NAME=folio-management

# Twilio Configuration
export TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
export TWILIO_AUTH_TOKEN=your_auth_token_here
export TWILIO_PHONE_NUMBER=+1XXX5551234

# Eleven Labs Configuration
export ELEVENLABS_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
export ELEVENLABS_VOICE_ID=your_voice_id_here

# Email Configuration (SMTP)
export EMAIL_SMTP_HOST=smtp.gmail.com
export EMAIL_SMTP_PORT=587
export EMAIL_SMTP_USER=your-email@gmail.com
export EMAIL_SMTP_PASSWORD=your_app_password_here

# Email Configuration (IMAP)
export EMAIL_IMAP_HOST=imap.gmail.com
export EMAIL_IMAP_PORT=993
export EMAIL_IMAP_USER=your-email@gmail.com
export EMAIL_IMAP_PASSWORD=your_app_password_here

# AWS SES Configuration (alternative to SMTP)
export SES_SENDER_EMAIL=noreply@yourdomain.com
export SES_REGION=us-east-1

# AWS WorkMail Configuration (alternative to IMAP)
export WORKMAIL_ORGANIZATION_ID=your-org-id
export WORKMAIL_EMAIL_ADDRESS=folio@yourdomain.com

# Feature Flags
export ENABLE_TEXTRACT=true
export ENABLE_COMPREHEND=true
export ENABLE_XRAY_TRACING=true
export ENABLE_DETAILED_MONITORING=true

# Monitoring
export CLOUDWATCH_LOG_RETENTION_DAYS=7
export XRAY_SAMPLING_RATE=0.1

# Optional: Database DynamoDB DAX Cluster
export ENABLE_DAX_CLUSTER=false
export DAX_CLUSTER_NAME=folio-dax-cluster
